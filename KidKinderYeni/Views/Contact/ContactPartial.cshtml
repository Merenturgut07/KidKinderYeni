@model KidKinderYeni.Entities.Contact

<div class="col-lg-7 mb-5">
    <div class="contact-form">
        <div id="success">
            @using (Html.BeginForm("ContactEkle", "AdminContact", FormMethod.Post))
            {

            <div class="form-group">
                @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "Adınız ve Soyadınız", required = "required" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email Adresiniz", required = "required" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Konu ", required = "required" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(x => x.Message, 2, 7, new { @class = "form-control", placeholder = "Mesaj", required = "required" })
            </div>
            <div>
                <button class="btn btn-primary py-2 px-4"
                        type="submit"
                        id="sendMessageButton">
                    Mesaj Gönder
                </button>
            </div>
            }
        </div>
    </div>
</div>
