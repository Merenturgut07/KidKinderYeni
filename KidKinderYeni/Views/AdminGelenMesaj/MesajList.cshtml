@model List<KidKinderYeni.Entities.Notification>
@{
    ViewBag.Title = "MesajList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>Öğretmen Listesi Tablosu</h5>
                        <span>Öğretmenler İle İlgili İşlemleri Yapabileciğiniz Alan</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Imageurl</th>
                                        <th> NotificationDate</th>
                                        <th>Description</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.NotificationId</td>
                                            <td>@item.Title</td>
                                            <td>@item.ImageUrl</td>
                                            <td>@item.NotificationDate</td>
                                            <td>@item.Description</td>

                                            <td><a href="/AdminGelenMesaj/DeleteGelenMesaj/@item.NotificationId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminGelenMesaj/UpdateGelenMesaj/@item.NotificationId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminGelenMesaj/CreateGelenMesaj/" class="btn btn-primary">Yeni Mesaj Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
