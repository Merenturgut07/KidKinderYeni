@model List<KidKinderYeni.Entities.BookASeat>
    @foreach(var item in Model)
    {
<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            @Html.Action("PartialBookHeader","Default")
            <div class="col-lg-5">
                <div class="card border-0">
                    <div class="card-header bg-secondary text-center p-4">
                        <h1 class="text-white m-0">Book A Seat</h1>
                    </div>
                    <div class="card-body rounded-bottom bg-primary p-5">
                        <form>
                            <div class="form-group">
                                <input type="@item.Name"
                                       class="form-control border-0 p-4"
                                       placeholder="İsim Soyisim"
                                       required="required" />
                            </div>
                            <div class="form-group">
                                <input type="@item.Email"
                                       class="form-control border-0 p-4"
                                       placeholder="Mail Bilgisi"
                                       required="required" />
                            </div>
                            <div class="form-group">
                                <select class="custom-select border-0 px-4"
                                        style="height: 47px">
                                    <option selected>Sınıf Seçiniz</option>
                                    <option value="1">Sınıf 1</option>
                                    <option value="2">Sınıf 2</option>
                                    <option value="3">Sınıf 3</option>
                                </select>
                            </div>
                            <div>
                                <button class="btn btn-secondary btn-block border-0 py-3"
                                        type="submit">
                                    Şimdi kayıt Ol
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    }
